{
  "name": "wework-qrcode-automation",
  "version": "1.0.0",
  "description": "基于Electron和Puppeteer的企业微信二维码自动化工具",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build:dev && electron . --dev",
    "build": "tsc && cp src/renderer/*.html src/renderer/*.css dist/renderer/ && electron-builder",
    "build:dev": "tsc && cp src/renderer/*.html src/renderer/*.css dist/renderer/",
    "build:win": "tsc && cp src/renderer/*.html src/renderer/*.css dist/renderer/ && electron-builder --win",
    "build:mac": "tsc && cp src/renderer/*.html src/renderer/*.css dist/renderer/ && electron-builder --mac",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint -c .eslintrc.js './src/**/*.ts' --fix",
    "test": "jest",
    "clean": "rimraf dist",
    "icons": "scripts/generate-icons.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NaN-ztn/wework_qrcode_automation.git"
  },
  "keywords": [
    "electron",
    "puppeteer",
    "automation",
    "wework",
    "qrcode"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NaN-ztn/wework_qrcode_automation/issues"
  },
  "homepage": "https://github.com/NaN-ztn/wework_qrcode_automation#readme",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/puppeteer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "rimraf": "^5.0.5",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "6.0.0"
  },
  "dependencies": {
    "puppeteer": "21.5.0"
  },
  "build": {
    "appId": "com.wework.qrcode.automation",
    "productName": "企业微信二维码自动化工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*", 
      "assets/**/*"
    ],
    "asarUnpack": [
      "node_modules/puppeteer*/**/*",
      "node_modules/@puppeteer/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.png",
      "files": [
        "dist/**/*", 
        "assets/**/*",
        "chrome/mac*/**/*"
      ],
      "asarUnpack": [
        "node_modules/puppeteer*/**/*",
        "node_modules/@puppeteer/**/*",
        "chrome/mac*/**/*"
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "files": [
        "dist/**/*", 
        "assets/**/*",
        "chrome/win*/**/*"
      ],
      "asarUnpack": [
        "node_modules/puppeteer*/**/*",
        "node_modules/@puppeteer/**/*",
        "chrome/win*/**/*"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico"
    }
  }
}